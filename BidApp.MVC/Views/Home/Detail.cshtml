@model BidApp.MVC.Models.DetailBidViewModel

@{
    ViewBag.Title = "Detail";
}

<h2>Detail</h2>
@Html.ValidationSummary()
<div>
    <h4>Bid</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => @Model.bid.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => @Model.bid.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => @Model.bid.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => @Model.bid.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => @Model.bid.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => @Model.bid.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => @Model.bid.Time)
        </dt>

        <dd>
            @Model.bid.Time.ToString()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => @Model.bid.Returned)
        </dt>

        <dd>
            @if (@Model.bid.Returned) { @Html.Label("Да") }
            else { @Html.Label("Нет") }
        </dd>

    </dl>
    <hr />
    @foreach (var item in @Model.comments)
    {
        @Html.Label("Статус измененён с " + item.From + " на " + item.To + " комментарий: " + item.Text)<br />
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { bidId = @Model.bid.BidId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
